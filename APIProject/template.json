{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Transform": "AWS::Serverless-2016-10-31",
    "Parameters": {
        "AppName": {
            "Type": "String",
            "Default": "SWGoH-Api"
        }
    },
    "Resources": {
        "ApiGateway": {
            "Type": "AWS::Serverless::Api",
            "Properties": {
                "Name": { "Ref": "AppName" },
                "StageName": "SWGoH",
                "EndpointConfiguration": "REGIONAL"
            }
        },
        "UserDetailsLF": {
            "Type": "AWS::Serverless::Function",
            "Properties": {
                "FunctionName": {
                    "Fn::Join": [
                        "-",
                        [
                            { "Ref": "AppName" },
                            "UserDetails-LF"
                        ]
                    ]
                },
                "CodeUri": "./LambdaFunctions/UserDetails-LF",
                "Handler": "index.handler",
                "Runtime": "nodejs12.x",
                "AutoPublishAlias": "live",
                "Events": {
                    "SignIn": {
                        "Type": "Api",
                        "Properties": {
                            "Path": "/SignIn/",
                            "Method": "post",
                            "RestApiId": {
                                "Ref": "ApiGateway"
                            }
                        }
                    },
                    "PlayerData": {
                        "Type": "Api",
                        "Properties": {
                            "Path": "/Players/",
                            "Method": "get",
                            "RestApiId": {
                                "Ref": "ApiGateway"
                            }
                        }
                    }
                }
            }
        }
    }
}